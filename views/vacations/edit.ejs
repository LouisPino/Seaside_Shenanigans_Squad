<%- include('../partials/header')%>

<section id="new-page">
    <h2>EDIT YOUR TRIP</h2>
  
    <form class="new-form" method="POST" action="/vacations/<%= vacation._id %>?_method=PUT">
      <main>
        <div class="new-titles">
          <h2>LOCATION:</h2>
          <h2>DATE RANGE:</h2>
          <h2>TRAVEL BUDDIES:</h2>
        </div>
        <div class="spacer"></div>
  
        <div class="new-vacation">
          <div class="new-form-ctr">
            <input class="new-location" type="text" name="location" value=<%= vacation.location %> />
            <div id="date-inputs">
              <input class="new-departure" type="date" name="departure" value='<%=d[0]%>-<%=d[1]%>-<%=d[2]%>'/>
              <p id="to">to</p>
              <input
                class="new-arrival"
                type="date"
                name="arrival"
                value= '<%=a[0]%>-<%=a[1]%>-<%=a[2]%>'
              />
            </div>
            <input
              class="new-companions"
              type="text"
              name="companions"
              value= '<%=companionNames.slice(2)%>''
            />
          </div>
        </div>
      </main>
      <input type="hidden" name="userId" value=<%=user._id%>>
      <button class="enter" id="new-form-submit" type="submit">
        Accept Changes
      </button>
    </form>
  </section>

<%- include('../partials/footer')%>